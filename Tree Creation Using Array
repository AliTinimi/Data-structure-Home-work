#include <stdio.h>

#define MAX 100

int tree[MAX];

int main() {
    int n;

    // Initialize array with -1 (empty tree)
    for (int i = 0; i < MAX; i++) {
        tree[i] = -1;
    }

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    // Insert nodes level by level
    for (int i = 0; i < n; i++) {
        printf("Enter value for node %d: ", i);
        scanf("%d", &tree[i]);
    }

    printf("\nTree Representation Using Array:\n");
    for (int i = 0; i < n; i++) {
        printf("Index %d -> %d\n", i, tree[i]);
    }

    printf("\nParent, Left Child, Right Child:\n");
    for (int i = 0; i < n; i++) {
        printf("Parent: %d | ", tree[i]);

        if (2 * i + 1 < n)
            printf("Left Child: %d | ", tree[2 * i + 1]);
        else
            printf("Left Child: NULL | ");

        if (2 * i + 2 < n)
            printf("Right Child: %d\n", tree[2 * i + 2]);
        else
            printf("Right Child: NULL\n");
    }

    return 0;
}
